<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View style="@style/DividerLine.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_announce_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#666666"
            android:textSize="@dimen/_14sp"
            tools:text="侧打飞机大V你上课开始导航辅导费可接受的客户反馈决定是否会计师对方好看反馈的说法" />

        <ImageView
            android:id="@+id/iv_announce_thumb"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_default_adimage" />
    </LinearLayout>
    <View style="@style/DividerLine.Horizontal" />

</LinearLayout>
