<?xml version="1.0" encoding="utf-8"?>
<com.gitstudy.listview.swipedeletelib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cms_usr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:singleLine="true"
            android:text="哈哈哈哈哈哈是喊杀声哈哈的是"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cms_sts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="13dip"
            android:paddingLeft="15dip"
            android:paddingTop="13dip"
            android:singleLine="true"
            android:text="fsafdsafsd"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mem_dtl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="13dip"
            android:paddingLeft="15dip"
            android:paddingTop="13dip"
            android:singleLine="true"
            android:text="fsdafafsaf"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:paddingTop="10dip"
            android:src="@drawable/xm_right" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#B8001C"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</com.gitstudy.listview.swipedeletelib.SwipeMenuLayout>