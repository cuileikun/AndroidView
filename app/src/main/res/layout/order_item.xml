<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <View
        android:visibility="gone"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wr_his_bg_3"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/name"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#4a4a4a"
            android:text="立项审核"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/t"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="55dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#9b9b9b"
                    android:textSize="13sp"
                    android:id="@+id/t1"
                    android:text="预警分类通过审核日期"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#4a4a4a"
                    android:textSize="13sp"
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/t"
                android:id="@+id/tt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#9b9b9b"
                    android:textSize="13sp"
                    android:id="@+id/t3"
                    android:text="创建人"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#4a4a4a"
                    android:textSize="13sp"
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ttt"
                android:layout_below="@+id/tt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#9b9b9b"
                    android:textSize="13sp"
                    android:id="@+id/t5"
                    android:text="创建日期"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#4a4a4a"
                    android:textSize="13sp"
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:id="@+id/b_line"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/ttt"
                android:background="#D8CFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>
        <View
            android:layout_alignBottom="@+id/b"
            android:layout_alignTop="@+id/b"
            android:layout_marginLeft="25dp"
            android:background="#E6DEDE"
            android:layout_width="1dp"
            android:layout_height="wrap_content"></View>
    </RelativeLayout>

</LinearLayout>
