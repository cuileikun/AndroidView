<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoLayout_Layout">
        <attr name="layout_auto_width" format="integer" />
        <attr name="layout_auto_height" format="integer" />

        <attr name="layout_auto_margin" format="integer" />
        <attr name="layout_auto_marginLeft" format="integer" />
        <attr name="layout_auto_marginTop" format="integer" />
        <attr name="layout_auto_marginRight" format="integer" />
        <attr name="layout_auto_marginBottom" format="integer" />
        <attr name="layout_auto_marginStart" format="integer" />
        <attr name="layout_auto_marginEnd" format="integer" />

        <attr name="layout_auto_textSize" format="integer" />

        <attr name="layout_auto_maxWidth" format="integer" />
        <attr name="layout_auto_maxHeight" format="integer" />
        <attr name="layout_auto_minWidth" format="integer" />
        <attr name="layout_auto_minHeight" format="integer" />

        <attr name="layout_auto_padding" format="integer" />
        <attr name="layout_auto_paddingTop" format="integer" />
        <attr name="layout_auto_paddingBottom" format="integer" />
        <attr name="layout_auto_paddingLeft" format="integer" />
        <attr name="layout_auto_paddingRight" format="integer" />
    </declare-styleable>
    <declare-styleable name="DropDownMenu">
        <attr name="ddunderlineColor" format="color" />
        <attr name="dddividerColor" format="color" />
        <attr name="ddtextSelectedColor" format="color" />
        <attr name="ddtextUnselectedColor" format="color" />
        <attr name="ddmenuBackgroundColor" format="color" />
        <attr name="ddmaskColor" format="color" />
        <attr name="ddmenuTextSize" format="dimension" />
        <attr name="ddmenuSelectedIcon" format="reference" />
        <attr name="ddmenuUnselectedIcon" format="reference" />
        <attr name="ddmenuMenuHeightPercent" format="float" />
    </declare-styleable>
    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
</resources>